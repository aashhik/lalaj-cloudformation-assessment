{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Effect": "Allow",
            "Action": [
                "ec2:*",
                "autoscaling:*",
                "ecs:*",
                "elasticloadbalancing:*",
                "cloudformation:*",
                "ssm:GetParameters",
                "ssm:GetParameter",
                "ssm:DescribeParameters",
                "logs:*",
                "iam:*"
            ],
            "Resource": "*"
        },
        {
            "Effect": "Allow",
            "Action": [
                "s3:GetObject",
                "s3:ListBucket"
            ],
            "Resource": [
                "arn:aws:s3:::demo-lalas-bucket-cf",
                "arn:aws:s3:::demo-lalas-bucket-cf/cf-templates/*"
            ]
        }
    ]
}
